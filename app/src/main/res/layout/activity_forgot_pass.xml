<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#de000000"
        android:gravity="center_horizontal"
        tools:text="Forgot Password"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/textView" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#99000000"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="8sp"
        android:gravity="center_horizontal"
        tools:text="Enter your email"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"/>

    <com.google.android.material.button.MaterialButton
        android:text="@string/create_new_account"
        android:layout_width="match_parent"
        app:cornerRadius="20dp"
        android:textColor="#FFFFFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:backgroundTint="@color/colorAccent"
        android:layout_height="45dp" android:id="@+id/send_email_button"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="22dp"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
        android:layout_marginBottom="60dp" app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>